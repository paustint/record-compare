{
  "appId": "com.electron.record.compare.app",
  "productName": "record-compare",
  "copyright": "Copyright Â© year Austin Turner",
  "directories": {
    "output": "release/"
  },
    "files": [
        "**/*",
        "assets/icons/mac/*.*",
        "assets/icons/png/*.*",
        "assets/icons/win/*.*",
        "!**/*.ts",
        "!*.code-workspace",
        "!LICENSE.md",
        "!package.json",
        "!package-lock.json",
        "!src/",
        "!e2e/",
        "!hooks/",
        "!angular.json",
        "!_config.yml",
        "!karma.conf.js",
        "!tsconfig.json",
        "!tslint.json"
    ],
  "win": {
    "icon": "dist",
    "target": [
      "portable"
    ]
  },
  "mac": {
    "icon": "dist",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist",
    "target": [
      "AppImage"
    ]
  }
}
