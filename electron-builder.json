{
  "appId": "com.electron.record.compare.app",
  "productName": "Record Compare",
  "copyright": "Copyright Â© year Austin Turner",
  "directories": {
    "output": "release/",
    "buildResources": "resources"
  },
  "files": [
    "**/*",
    "assets/icons/mac/*.*",
    "assets/icons/png/*.*",
    "assets/icons/win/*.*",
    "!**/*.ts",
    "!*.code-workspace",
    "!LICENSE.md",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "!e2e/",
    "!hooks/",
    "!angular.json",
    "!_config.yml",
    "!karma.conf.js",
    "!tsconfig.json",
    "!tslint.json"
  ],
  "win": {
    "icon": "resources/icons/win/icon.ico",
    "target": ["portable"]
  },
  "mac": {
    "icon": "resources/icons/mac/icon.icns",
    "target": ["dmg"]
  },
  "linux": {
    "icon": "resources/icons/png",
    "target": ["AppImage"]
  }
}
